<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2> <%= link_to restaurant.name, restaurant_path(restaurant) %> </h2>
    <p><%= link_to "Edit #{restaurant.name}", 
           edit_restaurant_path(restaurant) %></p>
    <p><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant),
           method: :delete %></p>
    <p><%= link_to "Review #{restaurant.name}",
           new_restaurant_review_path(restaurant) %></p>
    <ul>
      <% if restaurant.reviews.any? %>
        <% restaurant.reviews.each do |review| %>
          <li><%= review.thoughts %>, <strong><%= review.rating %></strong>/5</li>
        <% end %>
      <% else %>
        <p> No reviews </p>
      <% end %>
    </ul>
  <% end %>
<% else %>
  <h1>No restaurants yet </h1>
<% end %>
<%= link_to 'Add a restaurant', new_restaurant_path %>
